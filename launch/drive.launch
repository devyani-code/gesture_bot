<launch>
  <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />
  <arg name="model" default="$(find gesture_bot)/urdf/cam_model.urdf.xacro"/>
  
  

  <include file="$(find gesture_bot)/launch/01_launch.launch">
    <arg name="model" value="$(arg model)" />
  </include>
  

  <rosparam command="load" file="$(find gesture_bot)/config/joints.yaml" ns="rover_joint_state_controller" />
  <rosparam command="load" file="$(find gesture_bot)/config/cylins.yaml" ns="rover_head_controller" />
  <rosparam command="load"  file="$(find gesture_bot)/config/drive_wheel.yaml"  ns="rover_diff_drive_controller" />
  <!-- <rosparam command="load"  file="$(find gesture_bot)/config/lidar_control.yaml"  ns="lidar_controller" /> -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
  <node name="rover_controller_spawner" pkg="controller_manager" type="spawner"
    args="rover_joint_state_controller  rover_head_controller rover_diff_drive_controller   --shutdown-timeout 3"/>
  
  

 <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/rover_diff_drive_controller/cmd_vel"/>

  
    
  </node> 
</launch>